---
import SectionTitle from "@/components/SectionTitle.astro";
import Action from "@/components/Action.astro";
import type { ContactFormData } from "@/config/landing.interface";

interface Props {
  data: ContactFormData;
}

const { data } = Astro.props;
---

<section id="contact-form-section" class="contact-form-section flex flex-col mb-60 gap-y-28">
  <div class="max-w-5xl mx-auto w-full">
    <SectionTitle>
      {data.title}
    </SectionTitle>

    {data.subtitle && (
      <p class="contact-subtitle text-center text-lg text-gray-600 max-w-3xl mx-auto -mt-16 mb-12">
        {data.subtitle}
      </p>
    )}

    <div class="grid md:grid-cols-2 gap-12">
      {/* Contact Information */}
      {data.contactInfo && (
        <div class="space-y-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            {data.contactInfo.title || "Get in Touch"}
          </h3>

          {data.contactInfo.description && (
            <p class="text-gray-600 leading-relaxed">
              {data.contactInfo.description}
            </p>
          )}

          <div class="space-y-6">
            {data.contactInfo.email && (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-semibold text-gray-900">Email</p>
                  <a href={`mailto:${data.contactInfo.email}`} class="text-primary hover:underline">
                    {data.contactInfo.email}
                  </a>
                </div>
              </div>
            )}

            {data.contactInfo.phone && (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-semibold text-gray-900">Phone</p>
                  <a href={`tel:${data.contactInfo.phone}`} class="text-primary hover:underline">
                    {data.contactInfo.phone}
                  </a>
                </div>
              </div>
            )}

            {data.contactInfo.address && (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-semibold text-gray-900">Address</p>
                  <p class="text-gray-600">{data.contactInfo.address}</p>
                </div>
              </div>
            )}
          </div>
        </div>
      )}

      {/* Contact Form */}
      <div class="contact-form-card bg-white p-8 rounded-xl border border-gray-200 shadow-lg">
        <form action={data.formAction || "#"} method={data.formMethod || "POST"} class="space-y-6">
          {data.fields.map((field) => (
            <div>
              <label for={field.name} class="block text-sm font-semibold text-gray-900 mb-2">
                {field.label}
                {field.required && <span class="text-red-500">*</span>}
              </label>

              {field.type === "textarea" ? (
                <textarea
                  id={field.name}
                  name={field.name}
                  rows={field.rows || 4}
                  required={field.required}
                  placeholder={field.placeholder}
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
                />
              ) : field.type === "select" ? (
                <select
                  id={field.name}
                  name={field.name}
                  required={field.required}
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
                >
                  {field.options?.map((option) => (
                    <option value={option.value}>{option.label}</option>
                  ))}
                </select>
              ) : (
                <input
                  type={field.type}
                  id={field.name}
                  name={field.name}
                  required={field.required}
                  placeholder={field.placeholder}
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-shadow"
                />
              )}
            </div>
          ))}

          <Action
            as="button"
            type="submit"
            class="w-full bg-primary text-white hover:bg-blue-700 py-4 text-lg font-semibold"
          >
            {data.submitText || "Send Message"}
          </Action>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-form-section {
    color: var(--theme-text, inherit);
  }

  .contact-subtitle {
    color: var(--theme-text-secondary, inherit);
  }

  .contact-form-card {
    background-color: var(--theme-card-bg, #FFFFFF);
    border-color: var(--theme-border, #E5E7EB);
  }

  input:focus,
  textarea:focus,
  select:focus {
    outline: none;
  }
</style>
