---
import SectionTitle from "@/components/SectionTitle.astro";
import type { TestimonialsData } from "@/config/landing.interface";

interface Props {
  data: TestimonialsData;
}

const { data } = Astro.props;
---

<section id="testimonials-section" class="testimonials-section flex flex-col mb-60 gap-y-28">
  <SectionTitle>
    {data.title}
  </SectionTitle>

  {data.subtitle && (
    <p class="testimonials-subtitle text-center text-lg text-gray-600 max-w-3xl mx-auto -mt-16 mb-8">
      {data.subtitle}
    </p>
  )}

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto w-full">
    {
      data.testimonials.map((testimonial) => (
        <div class="testimonial-card flex flex-col h-full p-8 rounded-xl border border-gray-200 bg-white shadow-lg hover:shadow-xl transition-shadow">
          {/* Quote Icon */}
          <svg
            class="w-10 h-10 text-primary mb-4"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          {/* Testimonial Text */}
          <blockquote class="testimonial-quote flex-grow mb-6 text-gray-700 text-lg leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          {/* Rating (if provided) */}
          {testimonial.rating && (
            <div class="flex items-center mb-4">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class={`w-5 h-5 ${i < testimonial.rating! ? 'text-yellow-400' : 'text-gray-300'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          )}

          {/* Divider */}
          <hr class="border-gray-200 mb-4" />

          {/* Author Info */}
          <div class="flex items-center">
            {testimonial.image && (
              <img
                src={testimonial.image}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover mr-4 border-2 border-gray-200"
              />
            )}
            <div>
              <p class="testimonial-name font-semibold text-gray-900">
                {testimonial.name}
              </p>
              {testimonial.title && (
                <p class="testimonial-title text-sm text-gray-500">
                  {testimonial.title}
                </p>
              )}
              {testimonial.company && (
                <p class="testimonial-company text-sm text-gray-500">
                  {testimonial.company}
                </p>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* Theme-aware styling using CSS custom properties */
  .testimonials-section {
    color: var(--theme-text, inherit);
  }

  .testimonials-subtitle {
    color: var(--theme-text-secondary, inherit);
  }

  .testimonial-card {
    background-color: var(--theme-card-bg, #FFFFFF);
    border-color: var(--theme-border, #E5E7EB);
  }

  .testimonial-quote {
    color: var(--theme-text, #374151);
  }

  .testimonial-name {
    color: var(--theme-text, #161925);
  }

  .testimonial-title,
  .testimonial-company {
    color: var(--theme-text-secondary, #6B7280);
  }
</style>
