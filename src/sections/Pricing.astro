---
import Action from "@/components/Action.astro";
import Card from "@/components/Card.astro";
import Icon from "@/components/Icon.astro";
import SectionTitle from "@/components/SectionTitle.astro";
import type { PricingData } from "@/config/landing.interface";

interface Props {
  data: PricingData;
}

const { data } = Astro.props;
---

<section class="pricing-section mt-48">
  <SectionTitle>
    {data.title}
  </SectionTitle>
  <div
    class="my-20 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-y-10 place-items-center"
  >
    {
      data.tiers.map((tier) => (
        <Card>
          <header class="flex flex-col justify-center gap-y-3">
            <h3 class="pricing-tier-title text-4xl text-center font-semibold">{tier.title}</h3>
            <p class="pricing-tier-description text-xl text-center opacity-90">{tier.description}</p>
          </header>
          <section class="flex justify-center">
            <h4 class="pricing-amount text-6xl font-semibold">
              {tier.price.amount}
              {tier.price.period && (
                <span class="pricing-period font-normal text-xl opacity-85">
                  {tier.price.period}
                </span>
              )}
            </h4>
          </section>
          <section class="flex justify-start">
            <ul class="flex flex-col gap-y-4 text-lg">
              {tier.features.map((feature) => (
                <li class="pricing-feature flex flex-row px-7 gap-x-1">
                  <span>
                    <Icon class="w-6 h-auto pricing-check-icon text-primary" icon="CheckIcon" />
                  </span>
                  <p class="text-center">{feature}</p>
                </li>
              ))}
            </ul>
          </section>
          <footer class="flex justify-center">
            <Action
              as="a"
              class="pricing-cta bg-primary text-white w-72"
              type="button"
              href={tier.ctaHref || "#"}
            >
              {tier.cta}
            </Action>
          </footer>
        </Card>
      ))
    }
  </div>
</section>

<style>
  /* Theme-aware styling using CSS custom properties */
  .pricing-section {
    color: var(--theme-text, inherit);
  }

  .pricing-tier-title {
    color: var(--theme-text, inherit);
  }

  .pricing-tier-description {
    color: var(--theme-text-secondary, inherit);
  }

  .pricing-amount {
    color: var(--theme-text, inherit);
  }

  .pricing-period {
    color: var(--theme-text-secondary, inherit);
  }

  .pricing-feature {
    color: var(--theme-text, inherit);
  }

  .pricing-check-icon {
    color: var(--theme-accent, #1D4ED8);
  }

  .pricing-cta {
    background-color: var(--theme-accent, #1D4ED8);
    color: var(--theme-bg, #FFFFFF);
  }

  .pricing-cta:hover {
    background-color: var(--theme-accent-hover, #1E40AF);
  }
</style>
